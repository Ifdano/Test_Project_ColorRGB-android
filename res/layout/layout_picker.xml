<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft = "@dimen/marginFrame"
    android:layout_marginRight = "@dimen/marginFrame"
    android:layout_marginTop = "@dimen/marginFrame"
    android:layout_marginBottom = "@dimen/marginFrame"
    android:background = "#F5F5F5"
    >
    
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "@dimen/layoutPickerHeight"
        android:id = "@+id/layoutPicker"
        android:orientation = "horizontal"
        android:background = "#000000"
        >
    </LinearLayout>
    
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/textPicker"
        android:text = "@string/textPicker"
        android:textSize = "@dimen/textPickerSize"
        android:textStyle = "bold|italic"
        android:layout_gravity = "center"
        android:layout_marginTop = "@dimen/marginMain"
        >
    </TextView>
    
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal"
        android:layout_marginTop = "@dimen/marginMain"
        >
        
        <LinearLayout
            android:layout_width = "@dimen/layoutPickers"
            android:layout_height = "@dimen/layoutPickers"
            android:id = "@+id/layoutPicker1"
            android:orientation = "horizontal"
            android:background = "#000000"
            >
        </LinearLayout>
        
        <SeekBar
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/seekPicker1"
            android:layout_marginLeft = "@dimen/marginMain"
            android:max = "255"
            >
        </SeekBar>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal"
        android:layout_marginTop = "@dimen/marginMain"
        >
        
        <LinearLayout
            android:layout_width = "@dimen/layoutPickers"
            android:layout_height = "@dimen/layoutPickers"
            android:id = "@+id/layoutPicker2"
            android:orientation = "horizontal"
            android:background = "#000000"
            >
        </LinearLayout>
        
        <SeekBar
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/seekPicker2"
            android:layout_marginLeft = "@dimen/marginMain"
            android:max = "255"
            >
        </SeekBar>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal"
        android:layout_marginTop = "@dimen/marginMain"
        >
        
        <LinearLayout
            android:layout_width = "@dimen/layoutPickers"
            android:layout_height = "@dimen/layoutPickers"
            android:id = "@+id/layoutPicker3"
            android:orientation = "horizontal"
            android:background = "#000000"
            >
        </LinearLayout>
        
        <SeekBar
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/seekPicker3"
            android:layout_marginLeft = "@dimen/marginMain"
            android:max = "255"
            >
        </SeekBar>
        
    </LinearLayout>
    
    <Button
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/buttonPickerBack"
        android:text = "@string/buttonPickerBack"
        android:textSize = "@dimen/buttonPickerBack"
        android:textColor = "#FFFFFF"
        android:background = "#000000"
        android:layout_gravity = "right"
        android:gravity = "center"
        android:padding = "@dimen/paddingMain"
        android:layout_marginTop = "@dimen/marginMain"
        android:layout_marginRight = "@dimen/marginMain"
        >
    </Button>

</LinearLayout>
